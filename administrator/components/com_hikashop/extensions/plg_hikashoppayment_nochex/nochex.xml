<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" version="2.5" method="upgrade" group="hikashoppayment">
	<name>Hikashop Nochex</name>
	<creationDate>25th July 2018</creationDate>
	<version>1.2</version>
	<author>Nochex</author>
	<authorEmail>support@nochex.com</authorEmail>
	<authorUrl>https://www.nochex.com/gb</authorUrl> 
	<description>This plugin enables your customers to pay by Nochex</description>
	<files>
		<filename plugin="nochex">nochex.php</filename>
		<filename>nochex_end.php</filename>
	</files>
	<params addpath="/components/com_hikashop/params">
		<param name="pluginoptions" type="pluginoptions" default="plugin" label="hikashop" description="HikaShop options" />
	</params>
	<config>
		<fields name="params" addfieldpath="/components/com_hikashop/fields">
			<fieldset name="basic">
				<field id="pluginoptions" name="pluginoptions" type="pluginoptions" label="hikashop" description="HikaShop options" />
			</fieldset>
		</fields>
	</config>
</extension>
